<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Mobile.SettingsPage"
             xmlns:strings="clr-namespace:WeatherApp.Mobile.Resources.Language"
             Title="{x:Static strings:Strings.SETTINGS}">

    <StackLayout Padding="20">
        <Label Text="{x:Static strings:Strings.CHOOSE_LANGUAGE}" FontSize="Medium" />

        <Picker x:Name="LanguagePicker" SelectedIndexChanged="OnLanguageChanged" >
            <Picker.Items>
                <x:String>English</x:String>
                <x:String>French</x:String>
                <x:String>Irish</x:String>
            </Picker.Items>
        </Picker>
    </StackLayout>

</ContentPage>
